<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/bg2akcent">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="206dp"
        android:layout_height="114dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.189"
        app:srcCompat="@drawable/gb" />

    <EditText
        android:id="@+id/name"
        android:layout_width="372dp"
        android:layout_height="52dp"
        android:background="@drawable/solid1"
        android:ems="10"
        android:fontFamily="@font/russo_one_v"
        android:hint="  Имя"
        android:inputType="textPersonName"
        android:paddingLeft="9dp"
        android:text=""
        android:textColorHint="#C4C4C4"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.303" />

    <EditText
        android:id="@+id/password"
        android:layout_width="372dp"
        android:layout_height="52dp"
        android:background="@drawable/solid1"
        android:ems="10"
        android:hint="  Пароль"
        android:inputType="textPersonName"
        android:paddingLeft="9dp"
        android:text=""
        android:textColorHint="#C4C4C4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintVertical_bias="0.045"
        android:textSize="24dp"
        android:fontFamily="@font/russo_one_v"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="372dp"
        android:layout_height="52dp"
        android:background="@drawable/solid1"
        android:ems="10"
        android:hint="  E-mail"
        android:inputType="textPersonName"
        android:paddingLeft="9dp"
        android:text=""
        android:textColorHint="#C4C4C4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintVertical_bias="0.041"
        android:textSize="24dp"
        android:fontFamily="@font/russo_one_v"/>

    <Button
        android:id="@+id/button"
        android:layout_width="217dp"
        android:layout_height="42dp"
        android:background="@drawable/solid2"
        android:fontFamily="@font/russo_one_v"
        android:onClick="main"
        android:text="Sign-up"
        android:textAllCaps="false"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.262" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/russo_one_v"
        android:text="У вас уже есть аккаунт?"
        android:textColor="#F7FDD6"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.203" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/russo_one_v"
        android:onClick="enter"
        android:text="Войти"
        android:textAllCaps="false"
        android:textColor="#FFBF2D"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.116" />

</androidx.constraintlayout.widget.ConstraintLayout>